<?xml version="1.0" encoding="UTF-8"?>  
<Configuration>  
    <Appenders>  
        <Console name="stdout" target="SYSTEM_OUT">  
            <PatternLayout pattern="%5p [%t] - %msg%n" />  
        </Console>  
    </Appenders>  
    <Loggers>  
        <Root level="debug">  
            <AppenderRef ref="stdout" />  
        </Root>  
    </Loggers>
</Configuration>  